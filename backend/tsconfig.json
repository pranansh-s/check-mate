{
  "compilerOptions": {
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "module": "nodenext", 
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
